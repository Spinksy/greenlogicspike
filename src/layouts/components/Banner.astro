---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
const { banner } = Astro.props;
const { title, button, image, warrantyouter, warrantyinner, content } = banner;
---

<section class="section banner relative">
  <div class="container">
    <div class="row items-center">
      <div class="lg:col-6 text-center lg:text-left">
        <h1 class="banner-title" set:html={markdownify(title)} />
        <p class="mt-6" set:html={markdownify(content)} />

        {
          button.enable && (
            <a class="btn btn-primary mt-8" href={button.link}>
              {button.label}
            </a>
          )
        }
      </div>
      <div class="lg:col-6 text-center lg:text-center mt-8 lg:mt-0">
        <div class="relative inline-block">
        <Image
          class="object-contain"
          alt="banner"
          src={image}
          style="max-height: 396px;"
          width={180}
          height={396}
        />
        <Image
          class="absolute bottom-10 -right-10 animate-rotate-slow"
          src={warrantyouter}
          alt="warranty badge"
          width={130}
          height={130}
        />
        <Image
          class="absolute bottom-22 right-3"
          src={warrantyinner}
          alt="warranty badge"
          width={26}
          height={36}
        />
        </div>
        
      </div>
    </div>
  </div>

</section>
