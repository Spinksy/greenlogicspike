---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
const { banner } = Astro.props;
const { title, button, image, warrantyouter, warrantyinner, battery, content } = banner;
---

<section class="section banner relative">
  <video 
    class="absolute inset-0 w-full h-full object-cover z-0" 
    autoplay 
    muted 
    loop 
    playsinline
  >
    <source src="/images/home/background-video.mp4" type="video/mp4" />
  </video>
  <div class="absolute inset-0 z-5 pointer-events-none" style="
    background: 
      linear-gradient(to bottom, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0.4) 8%, transparent 20%, transparent 80%, rgba(255,255,255,0.4) 92%, rgba(255,255,255,0.8) 100%),
      linear-gradient(to right, rgba(255,255,255,0.2) 0%, transparent 8%, transparent 92%, rgba(255,255,255,0.2) 100%);
  "></div>

  <div class="container relative z-10">
    <div class="row items-center">
      <div class="lg:col-6 text-center lg:text-left">
        <h1 class="banner-title" set:html={markdownify(title)} />
        <p class="mt-6" set:html={markdownify(content)} />

        {
          button.enable && (
            <a class="btn btn-primary mt-8" href={button.link}>
              {button.label}
            </a>
          )
        }
      </div>
      <div class="lg:col-6 text-center lg:text-center mt-8 lg:mt-0">
        <div class="relative inline-block">
        <Image
          class="object-contain"
          alt="banner"
          src={image}
          style="max-height: 396px;"
          width={180}
          height={396}
        />
        <Image
          class="absolute bottom-10 -right-10 animate-rotate-slow"
          src={warrantyouter}
          alt="warranty badge"
          width={130}
          height={130}
        />
        <Image
          class="absolute bottom-22 right-3"
          src={warrantyinner}
          alt="warranty badge"
          width={26}
          height={36}
        />
        <Image
          class="absolute bottom-0 right-37"
          src={battery}
          alt="goodwe battery storage"
          width={330}
          height={330}
        />
        </div>
        
      </div>
    </div>
  </div>

</section>
