---
import { markdownify } from "@/lib/utils/textConverter";
const { banner } = Astro.props;
const { title, button, content } = banner;
---

<section class="section banner relative">
  <video 
    class="absolute inset-0 w-full h-full object-cover z-0" 
    autoplay 
    muted 
    loop 
    playsinline
    poster="/images/home/background-video-poster.jpg"
  >
    <source src="/images/home/background-video.mp4" type="video/mp4" />
  </video>
  <div class="absolute inset-0 z-5 pointer-events-none" style="
    background: 
      linear-gradient(to bottom, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0.4) 8%, transparent 20%, transparent 80%, rgba(255,255,255,0.4) 92%, rgba(255,255,255,0.8) 100%),
      linear-gradient(to right, rgba(255,255,255,0.2) 0%, transparent 8%, transparent 92%, rgba(255,255,255,0.2) 100%);
  "></div>

  <div class="container relative z-10">
    <div class="row items-center">
      <div class="lg:col-6 text-center lg:text-left">
        <h1 class="banner-title" set:html={markdownify(title)} />
        <p class="mt-6" set:html={markdownify(content)} />

        {
          button.enable && (
            <a class="btn btn-primary mt-8" href={button.link}>
              {button.label}
            </a>
          )
        }
      </div>
      <div class="lg:col-6 text-center lg:text-center mt-8 lg:mt-0">
        
          <slot name="images" /> 
        
      </div>
    </div>
  </div>

</section>
