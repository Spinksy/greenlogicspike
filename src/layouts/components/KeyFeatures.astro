---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
import HomapageFeature from "@/layouts/function-components/HomapageFeature";
const { key_features } = Astro.props;
const { title, description, feature_list } = key_features;
---

<section class="section key-feature relative overflow-hidden">
  <!-- Video Background -->
  <video 
    class="absolute inset-0 w-full h-full object-cover z-0" 
    autoplay 
    muted 
    loop 
    playsinline
  >
    <source src="/images/home/background-video.mp4" type="video/mp4" />
  </video>
  
  <!-- Gradient Mask for Soft Edges -->
  <div class="absolute inset-0 z-5 pointer-events-none" style="
    background: 
      linear-gradient(to bottom, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0.4) 8%, transparent 20%, transparent 80%, rgba(255,255,255,0.4) 92%, rgba(255,255,255,0.8) 100%),
      linear-gradient(to right, rgba(255,255,255,0.2) 0%, transparent 8%, transparent 92%, rgba(255,255,255,0.2) 100%);
  "></div>
  
  <!-- Content Overlay -->
  <div class="relative z-10 bg-transparent">
    <div class="container">
      <!-- <div class="row justify-between text-center lg:text-start">
        <div class="lg:col-5">
          <h2 set:html={markdownify(title)} />
        </div>
        <div class="mt-6 lg:col-5 lg:mt-0">
          <p set:html={markdownify(description)} />
        </div>
      </div> -->
      <HomapageFeature feature_list={feature_list} client:load />
    </div>
  </div>
</section>
